@model List<ClothesManagementSystem.Models.Product>
@{
    ViewBag.Title = "Index";
}

<head>
    <!-- Other head elements -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>



<div class="d-flex justify-content-center">
    <form class="d-flex" asp-action="Index" asp-controller="Admin">
        <input name="searchString" class="form-control me-1" type="search" placeholder="Search By Type" aria-label="Search" />
        <button class="btn btn-dark" type="submit">Search</button>
    </form>
</div>


<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Category Type</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Product Image</th>

    </tr>

    @foreach (var items in Model)
    {

        <tr>
            <td>@items.Name</td>
            <td>@items.Category.Type</td>
            <td>@items.Quantity</td>
            <td>@items.Price</td>
            @* <td>@items.ProductPic</td>*@
            <td>
                <img src="~/Content/Images/@items.ProductPic" alt="@items.Name" width="100" height="100" />
            </td>

            <td>
                <a href="@Url.Action("AddProduct","Admin", new {items.Id, items.Name, items.Category.Type,items.Price, items.ProductPic})" class="btn btn-info">Edit</a> |
                <a href="@Url.Action("Details","Admin", new {items.Id})" class="btn btn-primary">Details</a>|
                <a href="@Url.Action("Delete","Admin", new {items.Id})" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>

